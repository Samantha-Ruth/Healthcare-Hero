<article>
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Provider
    </h2>
    <form class="edit-services-form">
        <p>Provider Name</p>
        <div>
            <input name="provider-name" type="text" value="{{services.service_name}}" />
        </div>
        <p>Address</p>
        <div>
            <input name="address" type="text" value="{{provider.address}}" />
        </div>
        <p>Provider Link</p>
        <div>
            <input name="provider_url" type="text" value="{{services.provider_url}}" />
        </div>
        <p>Service Type</p>
        <div>
            <input name="service_category" type="text" value="{{services.service_category}}" />
        </div>
        <p>Cost</p>
        <div>
            <input name="cost" type="number" value="{{services.cost}}" />
        </div>
        <div>
            {{services.vote_count}} {{format_plural "point" services.vote_count}} by you on {{format_date services.created_at}}
            |
            <a href="/services/{{services.id}}">{{services.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save provider</button>
        <button type="button" class="delete-services-btn">Delete provider</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-services.js"></script>
<script src="/javascript/delete-services.js"></script>
<script src="/javascript/comment.js"></script>